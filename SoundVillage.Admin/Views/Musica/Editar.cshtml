@model SoundVillage.Application.Admin.Dto.MusicaDto

@{
    ViewData["Title"] = "Editar Música";
}

<h2>Editar Música</h2>

<h4>Música</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duracao" class="control-label">Duração</label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ArtistaId" class="control-label">Artista</label>
                <select asp-for="ArtistaId" class="form-control" asp-items="@(new SelectList(ViewBag.Artistas, "Id", "Nome"))">
                    <option value="">Selecione um Artista</option>
                </select>
                <span asp-validation-for="ArtistaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AlbumId" class="control-label">Álbum</label>
                <select asp-for="AlbumId" class="form-control" asp-items="@(new SelectList(ViewBag.Albuns, "Id", "Nome"))">
                    <option value="">Selecione um Álbum</option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
