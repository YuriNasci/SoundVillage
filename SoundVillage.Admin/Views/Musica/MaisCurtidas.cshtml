@model IEnumerable<SoundVillage.Admin.ViewModels.Musica.MusicaMaisCurtidasViewModel>

@{
    ViewData["Title"] = "Músicas Mais Curtidas";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Artista</th>
            <th>Álbum</th>
            <th>Curtidas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musica in Model)
        {
            <tr>
                <td>@musica.Nome</td>
                <td>@musica.ArtistaNome</td>
                <td>@musica.AlbumNome</td>
                <td>@musica.Curtidas</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</div>
