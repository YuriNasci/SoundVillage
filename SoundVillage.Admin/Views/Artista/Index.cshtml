@model IEnumerable<SoundVillage.Application.Admin.Dto.ArtistaItemDto>
<div>
    <a class="btn btn-primary" role="button" href="/Artista/Criar">Criar Artista</a>
</div>
<div>
    <table class="table table hover">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Descrição</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
